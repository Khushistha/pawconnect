NODE_ENV=development
PORT=8080

# Allow Vite dev server
FRONTEND_ORIGIN=http://localhost:5173

# Auto-create tables on startup (recommended for dev)
AUTO_MIGRATE=true

# JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d

# Superadmin seed (created automatically if email & password are set)
SUPERADMIN_EMAIL=superadmin@example.com
SUPERADMIN_PASSWORD=super-secure-password
SUPERADMIN_NAME=Super Admin

# MySQL
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=rescue_roots_nepal

# Cloudinary (for document uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (for notifications and OTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

